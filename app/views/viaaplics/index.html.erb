<%- model_class = Viaaplic -%>

<fieldset class='caixa'>
  <legend class='caixa'><%=t '.title', :default => 'Vias de aplicação'  %></legend>

<br>

<table class="table table-striped">

  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @viaaplics.each do |viaaplic| %>
      <tr>
        <td><%= link_to viaaplic.id, viaaplic_path(viaaplic) %></td>
        <td><%= viaaplic.descricao %></td>
        <td><%= viaaplic.updated_at  %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_viaaplic_path(viaaplic), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      viaaplic_path(viaaplic),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_viaaplic_path,
            :class => 'btn btn-primary' %>
