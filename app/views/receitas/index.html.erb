<%- model_class = Receita -%>

<fieldset class='caixa'>
  <legend class='caixa'><%=t '.title', :default => model_class.model_name.human.pluralize.titleize  %> 
  </legend>
 
<%= will_paginate @receitas, renderer: BootstrapPagination::Rails %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Data</th>
      <th>Paciente</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% for receita in @receitas %>
    <tr>
      <td><%= link_to receita.id, receita_path(receita.id) %></td>
      <td><%=h receita.data %></td>
      <td><%=h receita.paciente.nm_paciente %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_receita_path(receita, paciente: receita.paciente_id), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    receita_path(receita),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
      </td> 
    </tr>
    <% end %>
  </tbody>
</table>

<br />

</fieldset>