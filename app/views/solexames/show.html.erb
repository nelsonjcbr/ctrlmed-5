<%- model_class = Solexame -%>

<fieldset class='caixa'>
  <legend class='caixa'>Solicitação de exames</legend>

  <dl class="dl-horizontal">
    <dt>Paciente:</dt>
    <dd><b><%= @solexame.paciente.nm_paciente %></b></dd>

    <dt><strong>Data:</strong></dt>
    <dd><%= @solexame.data %></dd>

    <dt><strong>Clínica/laboratório:</strong></dt>
    <dd><%= @solexame.clilab.nm %></dd>

    <p>
    <table class="table">

      <% @solexame.solexameis.each do |r| %>
      <tr>
        <td><%= r.exame.descricao %></td>
      </tr>
      <% end %>
    </table>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  @solexame.paciente, :controller => :pacientes, :class => 'btn'  %>
      <%= link_to t('.edit', :default => "Editar Paciente"),
                  edit_solexame_path(@solexame,:paciente => @solexame.paciente ), :class => 'btn btn-primary' %>
      <%= link_to 'Imprimir', export_solexame_path(@solexame, format: 'pdf'),
          :class => 'btn btn-success'%>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        solexame_path(@solexame),
        :method => 'delete',
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza que quer excluir toda a solicitação?')) },
        :class => 'btn btn-danger' %>
    </div>
  </dl>
</fieldset>
