<%- model_class = Medicamento -%>

<fieldset class='caixa'>
  <legend class='caixa'><%=t '.title', :default => model_class.model_name.human.pluralize.titleize  %> (<%= @medicamentos.size %>)</legend>
 
<br>

<table class="table table-striped">

  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:dose) %></th>
      <th><%= model_class.human_attribute_name(:viaaplic) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @medicamentos.order(:descricao).each do |medicamento| %>
      <tr>
        <td><%= link_to medicamento.id, medicamento_path(medicamento) %></td>
        <td><%= medicamento.descricao %></td>
        <td><%= medicamento.dose %></td>
        <td><%= medicamento.viaaplic.descricao %></td>
        <td><%= medicamento.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_medicamento_path(medicamento), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      medicamento_path(medicamento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_medicamento_path,
            :class => 'btn btn-primary' %>
