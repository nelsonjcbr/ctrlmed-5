<%- model_class = Medicamento -%>

  <fieldset class='caixa'>
    <legend class='caixa'>Medicamentos</legend>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @medicamento.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dose) %>:</strong></dt>
  <dd><%= @medicamento.dose %></dd>
  <dt><strong><%= model_class.human_attribute_name(:viaaplic_id) %>:</strong></dt>
  <dd><%= @medicamento.viaaplic.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @medicamento.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @medicamento.updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              medicamentos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medicamento_path(@medicamento), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medicamento_path(@medicamento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
